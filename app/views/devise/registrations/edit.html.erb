<h2><%= t('devise.views.registrations.edit.title') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-4" }) do |f| %>
  <%= f.input :first_name, label: t('devise.views.registrations.edit.first_name'), required: false %>
  <%= f.input :last_name, label: t('devise.views.registrations.edit.last_name'), required: false %>
  <%= f.input :email, label: t('devise.views.registrations.edit.email') %>
  <%= f.input :password, hint: t('devise.views.registrations.edit.password_hint') %>
  <%= f.input :password_confirmation, label: t('devise.views.registrations.edit.password_confirmation') %>
  <%= f.input :current_password, hint: t('devise.views.registrations.edit.current_password_hint') %>
  <div class="d-flex justify-content-between mt-4">
    <%= link_to t('devise.views.registrations.edit.cancel'), root_path, class: "btn btn-outline-secondary" %>
    <%= f.button :submit, t('devise.views.registrations.edit.update'), class: "btn btn-primary" %>
  </div>
<% end %>

<br><hr><br>

<div class="row mb-3">
  <div class="col">
    <h3 class="text-danger"><%= t('devise.views.registrations.edit.cancel_account.title') %></h3>
    <p class="lead">
      <%= t('devise.views.registrations.edit.cancel_account.prompt') %>
      <%= button_to t('devise.views.registrations.edit.cancel_account.button'), registration_path(resource_name), method: :delete, data: { confirm: t('devise.views.registrations.edit.cancel_account.confirm') }, class: "btn btn-danger" %>
    </p>
  </div>
</div>
