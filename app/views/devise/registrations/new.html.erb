<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.input :email, label: "Email", input_html: { autocomplete: "email", autofocus: true } %>
  <%= f.input :first_name, label: "First name", required: false, input_html: { autocomplete: "given-name" } %>
  <%= f.input :last_name, label: "Last name", required: false, input_html: { autocomplete: "family-name" } %>
  <%= f.input :password, label: "Password", hint: "(#{@minimum_password_length} characters minimum)", input_html: { autocomplete: "new-password" } %>
  <%= f.input :password_confirmation, label: "Password confirmation", input_html: { autocomplete: "new-password" } %>
  <div class="d-flex justify-content-end mt-4">
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<br><hr><br>

<%= render "devise/shared/links" %>
