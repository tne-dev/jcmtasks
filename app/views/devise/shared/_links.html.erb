<% if controller_name != 'sessions' %>
  <%= link_to t('devise.views.shared_links.log_in'), new_session_path(resource_name), class: "link px-0 text-decoration-none" %>
  <br>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.views.shared_links.sign_up'), new_registration_path(resource_name), class: "link px-0 text-decoration-none" %>
  <br>
<% end %>

<% if devise_mapping.recoverable? && controller_name !~ /(passwords|registrations)/ %>
  <%= link_to t('devise.views.shared_links.forgot_password'), new_password_path(resource_name), class: "link px-0 text-decoration-none" %>
  <br>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.views.shared_links.did_not_receive_confirmation'), new_confirmation_path(resource_name), class: "link px-0 text-decoration-none" %>
  <br>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.views.shared_links.did_not_receive_unlock'), new_unlock_path(resource_name), class: "link px-0 text-decoration-none" %>
  <br>
<% end %>

<% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <%= button_to t('devise.views.omniauth.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false } %>
    <br />
  <% end %>
<% end %>
