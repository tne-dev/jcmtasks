<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0"><%= current_user.first_name %>'s tags</h1>
  <%= link_to "New Tag", new_tag_path, class: "btn btn-primary" %>
</div>

<% extend Pagy::Frontend %>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-light">
    <tr>
      <th>Title</th>
      <th>Created at</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <td><%= l(tag.created_at, format: :short) %></td>
        <td>
          <%= button_to "Delete", tag_path(tag), data: { turbo_method: :delete, turbo_confirm: "Delete this tag?" }, class: "btn btn-danger btn-sm rounded-pill" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= render "shared/pagination", pagy: @pagy %>