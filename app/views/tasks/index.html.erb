<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0"><%= current_user.first_name %>'s tasks</h1>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary" %>
</div>

<% extend Pagy::Frontend %>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-light">
    <tr>
      <th>Title</th>
      <!--<th>Project</th>-->
      <!--<th>Tags</th>-->
      <th>Created at</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
        <!--<td><%# task.project.name %></td>-->
        <!--<td>
          <%# task.tags.each do |tag| %>
            <span class="badge bg-secondary"><%#= link_to tag.title, tag_path(tag) %></span>
          <%# end %>
        </td>-->
        <td><%= task.created_at %></td>
        <td><%= task.is_done %></td>
        <td>
          <%= button_to "Delete", task_path(task), method: :delete, data: { confirm: "Delete this task?" }, class: "btn btn-danger btn-sm rounded-pill" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= render "shared/pagination" %>